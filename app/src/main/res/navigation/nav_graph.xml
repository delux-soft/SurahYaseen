<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">


    <fragment
        android:id="@+id/home"
        android:name="com.example.surahyaseen.fragments.HomeFragment"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/homeToSurah"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@animator/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim">

            <argument
                android:name="surahName"
                android:defaultValue="yaseen"
                app:argType="string" />
        </action>


        <action
            android:id="@+id/homeToNames"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@animator/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim">
            <argument
                android:name="names"
                android:defaultValue=""
                app:argType="string" />

        </action>


    </fragment>
    <fragment
        android:id="@+id/setting"
        android:name="com.example.surahyaseen.fragments.SettingFragment"
        tools:layout="@layout/fragment_setting">

    </fragment>
</navigation>