<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_today">

        <LinearLayout
            android:id="@+id/view_select"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_select"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#673AB7"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_date_muslim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textColor="#673AB7"
                android:textSize="9sp"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/view_event"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="bottom|end|center_vertical|center_horizontal|center|end"
            android:layout_margin="7dp"
            android:background="@drawable/pb_name_thumb" />
    </FrameLayout>
</FrameLayout>
